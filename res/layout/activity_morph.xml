<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="11"
    tools:context=".SelfCompileActivity" >

    <ImageButton
        android:id="@+id/btnAppIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="end"
        android:layout_row="0"
        android:onClick="btnBrowseIcon"
        android:scaleType="centerInside" />

    <EditText
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="center|fill_horizontal"
        android:layout_row="0"
        android:ems="10"
        android:inputType="textCapWords" />

    <Button
        android:id="@+id/btnCloneApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="end"
        android:layout_row="1"
        android:text="@string/btnCloneApp" />

    <Spinner
        android:id="@+id/spnAppTheme"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2" />

    <TextView
        android:id="@+id/lblStatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="7"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/pbBgProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="8"
        android:indeterminate="false"
        android:max="0"
        android:progress="0"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="9"
        android:onClick="btnReset"
        android:text="@string/btnReset" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="9"
        android:enabled="false"
        android:onClick="btnCancel"
        android:text="@string/btnCancel" />

    <Button
        android:id="@+id/btnInstall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="9"
        android:onClick="btnInstall"
        android:text="@string/btnInstall" />

</GridLayout>